<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A237E"
    android:padding="32dp"
    tools:context="org.d3ifcool.patungan_edt.MainActivity">

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="60sp"
        android:layout_marginTop="98dp"
        android:text="@string/app_title"
        android:letterSpacing="-0.1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/motto_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="100dp"
        android:text="Mudahnya Belanja Bareng!"
        android:layout_below="@+id/title_textview"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/register_button"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_button"
        android:textColor="#1A237E"
        android:layout_marginTop="32dp"
        android:text="@string/signup"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:layout_below="@+id/motto_textview"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/hintToLogin_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:layout_below="@+id/register_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:textSize="16sp"
        android:background="@drawable/rounded_button"
        android:textColor="#1A237E"
        android:layout_marginTop="5dp"
        android:text="@string/signin"
        android:textAllCaps="false"
        android:layout_below="@+id/hintToLogin_textview"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
